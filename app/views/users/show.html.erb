<div class="row">
  <div class="col-12 text-center" style="padding: 20px; background-color: #f2f2f2;">
    <p> <%= @user.username %> </p>
    <p> <%= @user.email %> </p>
    <p> <%= @user.bio %> </p>
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, style: "width: 50px; height: 50px;" %>
    <% end %>
  </div>
</div>
